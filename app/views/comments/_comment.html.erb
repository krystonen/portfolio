<div class="comment-card mt-3">
  <div class="card">
    <div class="card-block p-3">
      <div class="row">
        <div class="col-md-2">
          <%= gravatar_helper comment.user %>
        </div>

        <div class="col-md-10 ">
          <div>
            <%= comment.content %>
          </div>
          <div class="comment-attribution">
            <p class="blog-post-meta"> Comment posted by <strong> <%= comment.user.first_name %> </strong>
              <%= distance_of_time_in_words(comment.created_at, Time.now)%> ago</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
