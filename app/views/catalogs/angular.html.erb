<h1> Angular Portfolio Items </h1>

<%= link_to "Create New Item", new_catalog_url if logged_in?(:site_admin)%>

<% @angular_catalog_items.each do |item| %>
<p><%= link_to item.title, portfolio_show_path(item) %></p>
<p><%= item.subtitle %></p>
<p><%= item.body%></p>
<p><%= image_tag item.thumb_image unless item.thumb_image.nil? %></p>
<p><%#= image_tag item.main_image unless item.main_image.nil? %></p>
<%=link_to "Edit", edit_catalog_path(item) if logged_in?(:site_admin) %>
<%= link_to 'Delete Portfolio Item', catalog_path(item) , method: :delete, data: { confirm: 'Are you sure?'}  if logged_in?(:site_admin)
%> <% end %>
